{
  "root": true,
  "env": {
    "node": true,
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "dashboard/node_modules/"
  ],
  "overrides": [
    {
      "files": ["cli/**/*.js"],
      "rules": {
        "no-console": "off",
        "no-unused-vars": "off",
        "semi": "off",
        "quotes": "off"
      }
    }
  ],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "semi": ["warn", "always"],
    "quotes": ["warn", "double"]
  }
}

